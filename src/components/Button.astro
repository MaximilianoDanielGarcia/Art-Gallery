---
interface Props {
    href: string;
	text: string;
    reverse?: boolean;
}

const { href, text, reverse } = Astro.props;

const flexDirection = reverse ? 'row-reverse' : 'row';
const orientation = reverse ? '180deg' : '0deg';
---

<a href={href}>
    <span class="btn-text">{text}</span>
    <span class="btn-icon">
        <img src="./assets/images/button_arrow_mob.svg" alt="">
    </span>
</a>

<style define:vars={{ flexDirection, orientation }}>

    a {
        background: var(--black);
        color: var(--white);
        display: flex;
        flex-direction: var(--flexDirection);
        justify-content: space-between;
        align-items: center;
        width: 260px;
        height: 72px;
        border: none;
        text-decoration: none;
        cursor: pointer;
        font-family: 'Big Shoulders Display';
        font-size: 20px;
        font-weight: 800;
        letter-spacing: 3.636px;
    }

    a > span {
        transition: background .4s ease;
    }

    .btn-text {
        display: grid;
        place-items: center;
        height: 100%;
        width: 100%;
    }

    .btn-icon {
        display: grid;
        place-items: center;
        background: var(--beige);
        width: 56px;
        height: 100%;
        transform: rotate(var(--orientation));
    }

    a:hover > .btn-text {
        background: var(--beige);
    }

    a:hover > .btn-icon {
        background: var(--black);
    }


</style>